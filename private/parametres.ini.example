; Domaine du site (sans http:// ni /)
domain = "vote.example.com"

; Parametres de connexion a la base de donnees PostgreSQL
lehost = "localhost"        ; Hôte de la base de données
leport = "5432"             ; Port PostgreSQL (par défaut: 5432)
dbname = "nom_base_donnees" ; Nom de votre base de données
user = "utilisateur_bdd"    ; Utilisateur PostgreSQL
pass = "mot_de_passe_bdd"   ; Mot de passe PostgreSQL

; Mode debug (IMPORTANT: mettre à false en production)
debug = false ; true = affiche les erreurs PHP, false = masque les erreurs

; Parametres SMTP pour l'envoi d'emails
smtp_host = "smtp.exemple.com"      ; Serveur SMTP
smtp_port = "587"                   ; Port SMTP (587 pour TLS, 465 pour SSL)
smtp_user = "vote@exemple.com"      ; Identifiant SMTP
smtp_pass = "mot_de_passe_smtp"     ; Mot de passe SMTP

; Email de support (optionnel, défaut: support@{domain})
support_email = "support@vote.example.com"

